[push]
	default = upstream
[alias]
	co = checkout
	ci = commit
	br = branch
	st = status --short --branch
	d = difftool
		glog = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[diff]
	tool = vimdiff
[difftool]
	tool = vimdiff $LOCAL $REMOTE
	prompt = true
